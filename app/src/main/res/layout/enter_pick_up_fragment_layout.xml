<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#96ffbb00"
    android:backgroundTint="@color/material_blue_grey_800"
    android:id="@+id/start_and_destination_fragment"
    android:weightSum="1"
    android:rowCount="27"
    android:columnCount="4">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="0.14"
        android:layout_row="0"
        android:layout_column="0"></TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.14"
        android:layout_row="1"
        android:layout_column="0"></TableLayout>

    <Button
        android:layout_width="47dp"
        android:layout_height="36dp"
        android:text="C"
        android:id="@+id/button5"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView3"
        android:layout_row="9"
        android:layout_column="0"
        android:background="#ffffff"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/right_margin1"
        android:layout_marginLeft="@dimen/right_margin1" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView4"
        android:layout_row="12"
        android:layout_column="0"
        android:background="#ffffff"
        android:layout_marginTop="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="@dimen/right_margin1"
        android:layout_marginLeft="@dimen/right_margin1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ask"
        android:id="@+id/button7"
        android:layout_row="25"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/right_margin1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="OK"
        android:id="@+id/button6"
        android:layout_row="26"
        android:layout_column="0"
        android:layout_gravity="right" />

</GridLayout>